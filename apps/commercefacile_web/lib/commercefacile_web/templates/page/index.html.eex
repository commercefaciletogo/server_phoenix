        <aside class="menu is-hidden-mobile">
          <p class="menu-label">
            Villes
          </p>
          <ul class="menu-list">
            <li>
              <ul>
                <%= render_many @cities, Commercefacile.Web.PageView, "city_list_item.html", assigns %>
              </ul>
            </li>
          </ul>

          <p class="menu-label">
            Regions
          </p>
          <ul class="menu-list">
            <li>
              <ul>
                <%= render_many @regions, Commercefacile.Web.PageView, "region_list_item.html", assigns %>
              </ul>
            </li>
          </ul>
        </aside>
      </div>
    </div>
  </div>
</div>

