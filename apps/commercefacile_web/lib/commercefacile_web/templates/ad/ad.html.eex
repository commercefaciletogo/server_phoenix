<a href="<%= ad_path(@conn, :show, @ad.uuid) %>" class="box ad-container">
    <article class="media" style="position: relative;">
        <div class="media-left">
            <div class="ad-thumbnails-image-wrapper">
                <img 
                    class="b-lazy"
                    src="data:image/svg+xml;base64," 
                    data-src="<%= @ad.thumbnail %>" 
                    alt="<%= @ad.title %>">
            </div>
        </div>
        <div class="media-content">
            <div class="content ad-title">
                <%= @ad.title %>
            </div>
            <div class="content is-small">
                <p class="ad-category">
                    <%= @ad.category %>
                </p>
            </div>
            <div class="content">
                <p class="ad-price">
                    <strong> <%= @ad.price %> </strong>  <span>F CFA</span> 
                </p>
            </div>
        </div>
        <small class="time"><%= @ad.date %></small>
    </article>
</a>