<section class="section" style="padding-top: 0; padding-bottom: 1rem;">
    <div class="container">
        <div class="columns">
            <div class="column is-10-desktop is-offset-1-desktop">
                <nav class="breadcrumb is-small">
                    <ul>
                        <li><a href="<%= page_path(@conn, :index) %>">Acceuil</a></li>
                        <%= unless @author.location == "N/A" do %>
                            <li><a href="<%= url_for(@conn, "ad.index", l: @author.location.uuid) %>"><%= @author.location.name %></a></li>
                        <% end %>
                        <li><a href="<%= url_for(@conn, "ad.index", c: @ad.category.uuid) %>"><%= @ad.category.name %></a></li>
                        <li class="is-active"><a><%= @ad.title %></a></li>
                    </ul>
                </nav>
            </div>                
        </div>
    </div>
</section>

<section class="section" style="padding-top: 0;">
    <div class="container">
        <div class="columns">
            <div class="column is-8-desktop is-offset-2-desktop is-12-tablet">
                <div class="columns">
                    <div class="column is-8">
                        <div style="border: 1px solid #dbdbdb; padding: 0; border-radius: 3px;">
                            <div class="ad-image-slider">
                                <%= for picture <- @ad.pictures do %>
                                    <div class="ad-image-wrapper">
                                        <img 
                                            src="data:image/svg+xml;base64," 
                                            data-tns-role="lazy-img" 
                                            data-src="<%= picture.path %>" 
                                            alt="<%= @ad.title %>">
                                    </div>
                                <% end %>
                            </div>

                            <div class="thumbnails">
                                <%= for thumbnail <- @ad.thumbnails do %>
                                    <div class="ad-thumbnails-image-wrapper">
                                        <img src="<%= thumbnail.path %>" alt="<%= @ad.title %>">
                                    </div>
                                <% end %>
                            </div>

                            <table class="table" style="margin-top: 10px;">
                                <tbody>
                                    <tr>
                                        <td colspan="2">Mise en ligne <%= @ad.date_of_post %> par 
                                            <a href="<%= user_path @conn, :shop, @author.phone %>" class="user"><%= @author.name %></a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Prix</strong></td>
                                        <td><span class="price">
                                            <%= @ad.price %> F CFA
                                            </span>
                                        </td>
                                    </tr>
                                    <%= unless @author.location == "N/A" do %>
                                        <tr>
                                            <td><strong>Ville</strong></td>
                                            <td><%= @author.location.name %></td>
                                        </tr>
                                    <% end %>
                                    <tr>
                                        <td colspan="2">
                                            <div class="content">
                                                <h5><strong><u>Description</u>:</strong></h5>
                                                <p><%= @ad.description %></p>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="column">
                        <table class="table is-bordered">
                            <thead class="is-hidden-mobile">
                                <tr>
                                    <th style="text-align: center; color: #33446d;" colspan="2"><%= @author.name %></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="2" class="has-text-centered">
                                        <button class="button is-fullwidth view-phone">
                                            <span class="icon is-small">
                                                <i class="fa fa-phone"></i>
                                            </span>
                                            <span class="phone">Voir Numero</span>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" class="has-text-centered">
                                        <a href="<%= user_path(@conn, :shop, @author.phone) %>" class="button is-fullwidth">
                                            <span class="icon is-small">
                                                <i class="fa fa-cubes"></i>
                                            </span>
                                            <span>Voir toutes annonces</span>
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <button class="button is-fullwidth favorite">
                                            <span class="icon is-small">
                                                <i class="fa fa-heart-o"></i>
                                            </span>
                                            <span>Sauvegarder l'annonce</span>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <button class="button is-fullwidth report">
                                            <span class="icon is-small">
                                                <i class="fa fa-ban"></i>
                                            </span>
                                            <span>Signaler l'annonce</span>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="has-text-centered">
                                        <span class="icon is-small">
                                            <i class="fa fa-share-alt"></i>
                                        </span>
                                        <!--<span>Partager l'annonce</span>-->
                                    </td>
                                    <td class="has-text-centered">
                                        <button data-url="https://facebook.com/sharer/sharer.php?u=<%= ad_url(@conn, :show, @ad.uuid) %>" data-medium="facebook" class="button is-small share facebook">
                                            <span class="icon is-small">
                                                <i class="fa fa-facebook"></i>
                                            </span>
                                        </button>
                                        <button data-url="https://twitter.com/intent/tweet/?url=<%= ad_url(@conn, :show, @ad.uuid) %>" data-medium="twitter" class="button is-small share twitter">
                                            <span class="icon is-small">
                                                <i class="fa fa-twitter"></i>
                                            </span>
                                        </button>
                                        <button data-url="whatsapp://send?text=<%= ad_url(@conn, :show, @ad.uuid) %>" data-medium="whatsapp" class="button is-small is-hidden-desktop share whatsapp">
                                            <span class="icon is-small">
                                                <i class="fa fa-whatsapp"></i>
                                            </span>
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                                
                        </table>
                    </div>
                </div>
            </div>                
        </div>
            
    </div>
</section>